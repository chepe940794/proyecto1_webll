@model IEnumerable<shanuMVCUserRoles.Models.BienesModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="../../Content/switchery.css" rel="stylesheet">
<script src="../../Scripts/plugins/switchery/switchery.js"></script>
<script src="../../Scripts/jquery-2.1.1.js"></script>
<script src="../../Scripts/bootstrap.min.js"></script>
<script src="../../Scripts/app/inspinia.js"></script>
<script src="../../Scripts/plugins/pace/pace.min.js"></script>
<script src="../../Scripts/plugins/slimscroll/jquery.slimscroll.min.js"></script>
<br />
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Propiedades</h2>

    </div>
    <br />
    <div class="col-lg-2">
        <div><a class="btn btn-default" href="@Url.Action("Create", "BienesModels")"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;Crear Propiedad</a></div>
    </div>
</div>

<br />
<div class="wrapper wrapper-content animated fadeInRight white-bg">
    <table class="table">
        <tr>
            <th style="width: 20%; text-align: center">
                @*@Html.DisplayNameFor(model => model.Imagen)*@
            </th>

            <th style="text-align: center">
                @Html.DisplayNameFor(model => model.NombrePropiedad)
            </th>

            <th style="text-align: center">
                Estado
            </th>

          <th style="text-align: center">
                @Html.DisplayNameFor(model => model.Telefono)
            </th>

            <th style="text-align: center">
                @Html.DisplayNameFor(model => model.Precio)
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align: center">
                    @if (item.Imagen != null)
                    {
                        <img src="../../Images/@item.Imagen" style="width: 30%;" />
                    }
                    else
                    {
                        <img src="../../Images/home.png" style="width: 30%;"/>
                    }

                </td>
                <td style="text-align: center">
                    @Html.DisplayFor(modelItem => item.NombrePropiedad)
                </td>


                <td style="text-align: center">
                    @if (item.Activo)
                    {
                        <span class="label label-primary">Activo</span>
                    }
                    else
                    {
                        <span class="label label-danger">Desactivado</span>
                    }

                </td>

                <td style="text-align: center">
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>

                <td style="text-align: center">
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    <a class="btn btn-success btn-xs" title="Editar Propiedad" href="@Url.Action("Edit", "BienesModels", new {id = item.Id})"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                    <a class="btn btn-success btn-xs" title="Detalles Propiedad" href="@Url.Action("Details", "BienesModels", new {id = item.Id})"><span class="glyphicon glyphicon-tags" aria-hidden="true"></span></a>
                    <a class="btn btn-success btn-xs" title="Eliminar Propiedad" href="@Url.Action("Delete", "BienesModels", new {id = item.Id})"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    <a class="btn btn-success btn-xs" title="Cambiar de Estado" href="@Url.Action("ChangeStatus", "BienesModels", new {id = item.Id})"><span class="glyphicon glyphicon-minus-sign" aria-hidden="true"></span></a>
                   
                </td>
            </tr>
        }

    </table>
</div>
